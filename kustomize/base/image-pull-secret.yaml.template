apiVersion: v1
kind: Secret
metadata:
  name: ghcr-secret
  namespace: firearms-search
type: kubernetes.io/dockerconfigjson
stringData:
  .dockerconfigjson: |
    {
      "auths": {
        "ghcr.io": {
          "auth": "BASE64_ENCODED_USERNAME_PASSWORD"
        }
      }
    }
---
# To create the base64 encoded auth:
# echo -n "YOUR_GITHUB_USERNAME:YOUR_GITHUB_TOKEN" | base64
#
# Then replace BASE64_ENCODED_USERNAME_PASSWORD above with that value
#
# Or use the script: scripts/create-image-pull-secret.sh
